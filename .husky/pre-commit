pnpm lint

echo "🚚 finished linting.."
echo "✔ check branch before push"

current_branch=$(git branch --show-current)

restricted_branches="^(main|master|develop/.+)$"

if [[ $current_branch =~ $restricted_branches ]]; then
  echo "❌ You cannot commit on a restricted branch: $current_branch.."
  echo "❌ Not allowed via pre-commit hook.."
  exit 1
fi