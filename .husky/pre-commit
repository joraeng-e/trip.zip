#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

pnpm lint

echo "ğŸšš Finished linting.."
echo "âœ” Check branch before push"

current_branch=$(git branch --show-current)

restricted_branches="^(main|develop/.+)$"

if [[ $current_branch =~ $restricted_branches ]]; then
  echo "âŒ You cannot push on a restricted branch: $current_branch.."
  echo "âŒ Not allowed via pre-push hook.."
  exit 1
fi
